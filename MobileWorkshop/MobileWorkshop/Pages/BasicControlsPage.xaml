<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileWorkshop.Pages.BasicControlsPage">
	<ScrollView>
		<StackLayout Orientation="Vertical"
					 HorizontalOptions="Center"
					 Padding="5,0,0,0">

			<Switch />

			<Label Text="Entry text:" />
			<Entry />
			<Button Text="Button" Command="{Binding Path=MessageCommand}" />
			
			<Label Text="Date:" />
			<DatePicker />

			<Label Text="Picker:" />
			<Picker x:Name="PickerControl" />

			<Stepper x:Name="StepperControl" Minimum="0" Maximum="100" Value="1" />
			<Label Text="{Binding Source={x:Reference Name=StepperControl}, Path=Value}" />

			<SearchBar Text="" />

			<Label Text="Slider indicator:" />
			<Slider x:Name="SliderControl" Value="10" />			
			<ProgressBar Progress="{Binding Source={x:Reference Name=SliderControl}, Path=Value}" />

		</StackLayout>
	</ScrollView>
</ContentPage>